    "@repo/config": "*",
    "body-parser": "^1.20.2",
    "connect-pg-simple": "^9.0.1",
    "connect-redis": "^7.1.1",
    "csurf": "^1.11.0",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "graphile-build": "^4.13.0",
    "graphile-build-pg": "^4.13.0",
    "graphile-utils": "^4.13.0",
    "graphile-worker": "^0.16.6",
    "graphql": "^15.9.0",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "next": "14.2.4",
    "passport": "^0.7.0",
