{
  "name": "@repo/base-plugin",
  "private": true,
  "version": "0.0.0",
  "exports": {
    ".": "./src/index.ts",
    "./server": "./src/server/index.ts",
    "./client": "./src/client/index.ts"
  },
  "scripts": {
    "build": "yarn build:server && yarn build:client",
    "build:server": "tsup-node src/server/index.ts",
