    "postinstall": "cd ../.. && yarn patch-package"
  },
  "dependencies": {
    "@trpc/server": "^11.0.0-rc.461",
    "express": "^4.19.2",
    "react": "rc",
    "react-yjs": "^2.0.0",
    "valtio": "^1.13.2",
    "valtio-yjs": "^0.6.0",
    "yjs": "^13.6.18"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/react": "npm:types-react@rc",
    "tsup": "^8.1.2",
    "yjs-types": "^0.0.1"
  }
}
